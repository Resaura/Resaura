root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{ts,tsx,js,jsx,json,css,scss,less,graphql,yaml,yml,mdx}]
indent_size = 2

[*.{png,jpg,jpeg,gif,webp,ico,ttf,otf,woff,woff2,mp4,mp3}]
charset = binary
